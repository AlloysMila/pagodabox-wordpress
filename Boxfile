web1: 
  name: wp-web
  php_display_errors: "0"
  document_root: wordpress/
  shared_writable_dirs: wordpress/wp-content/
  after_build:
    - "cp -r pagoda/ wordpress/"
    - "mv wordpress/wp-content/ wordpress/wp-content-original/"
    - "mkdir wordpress/wp-content/"
  before_deploy:
    - "cp -r wordpress/wp-content-original/ wordpress/wp-content/"
  php_extensions:
    - mysql
    - gd
    - mbstring
    - exif
    - iconv
    - mcrypt
    - zip
    - curl

db1:
  name: wp-db
  type: mysql