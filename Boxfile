web1: 
  name: wp-web
  document_root: /wordpress
  shared_writable_dirs:
    - wordpress/wp-content/
  after_build:
    - "mv pagoda/wp-config.php wordpress/wp-config.php"
    - "mv pagoda/.htaccess wordpress/.htaccess"
    - "rmdir pagoda/"
    - "mv -R wordpress/wp-content/ wordpress/wp-content-original/"
    - "mkdir wp-content/"
  before_deploy:
    - "cp -R wordpress/wp-content-original/* wordpress/wp-content/"
  php_extensions:
    - mysql
    - gd
    - mbstring
    - exif
    - iconv
    - mcrypt
    - zip
db1:
  name: wp-db
  type: mysql