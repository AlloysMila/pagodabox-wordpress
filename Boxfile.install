web1: 
  name: wp-web 
  shared_writable_dirs:
    - wp-content/
  after_build:
    - "mv pagoda/wp-config.php wp-config.php"
    - "rm -R pagoda"
    - "mv wp-content/ wp-content-tmp/"
  after_deploy:
    - "cp -R wp-content-tmp/* wp-content/"
    - "rm -R wp-content-tmp"
  php_extensions:
    - mysql
    - gd
    - mbstring
    - exif
    - iconv
    - mcrypt
    - zip
db1:
  name: wp-db